    <TextView
        android:id="@+id/tvNamespace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="NAMESPACE"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvBeaconOne"
